<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg_color"
        android:orientation="vertical">

        <cn.xiaobaihome.xiaobaihelper.widget.StatusBarHeightView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg_color" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_random_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionBarHeight"
            android:background="@color/main_bg_color"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@mipmap/back"
            tools:ignore="PrivateResource">
            <RelativeLayout
                android:id="@+id/activity_food_toolbar_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionBarHeight"
                android:background="@color/main_bg_color">

                <TextView
                    android:id="@+id/activity_food_title"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/main_text_color"
                    android:textStyle="bold"
                    android:text="@string/choose_helper"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <ListView
            android:id="@+id/activity_random_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:divider="@null"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg_color"
            android:orientation="vertical">

            <!--模拟中奖的指针-->
            <TextView
                android:text="|"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <cn.xiaobaihome.xiaobaihelper.widget.RotationPanelView
                android:layout_marginTop="-40dp"
                android:id="@+id/activity_random_rotation_panel_view"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <Button
            android:id="@+id/activity_random_help_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:background="@drawable/bg_btn_login"
            android:elevation="11dp"
            android:text="@string/listen_to_the_god"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:stateListAnimator="@null" />

    </LinearLayout>

    <data>


    </data>
</layout>